<%- include("partials/header.ejs") %>


<h1>Where are you going today?</h1>

  <p>
    You have entered <strong><%= postalCode %></strong> as the postal code. Confirm which of the places this refers to. 
  </p>

  <!-- To include list of places here -->
  <div class="dropdown">
    <button action="/duration" method="POST" class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Places
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <a class="dropdown-item" href="#">Action</a>
      <a class="dropdown-item" href="#">Another action</a>
      <a class="dropdown-item" href="#">Something else here</a>
    </div>
  </div>

  <h2>Places:</h3>
  <ul id="places">
        
    <% for(var listnum=0;listnum<places.length;listnum++) { %>

      <span onclick="getId('<%= listnum %>')"><%=places[listnum].ADDRESS%></span>
      
    <% } %>
  </ul>
  
  <form action="/duration" method="POST">
    <div class="form-group">
        <input name="postalCode" type="text" class="postal-input" placeholder="Enter postal code" />
        <small id="postalCodeHelp" class="form-text text-muted">Please enter a valid postal code.</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

<%- include("partials/footer.ejs") %>